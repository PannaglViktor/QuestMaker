<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/l_background"
    android:id="@+id/makeQuestFragment"
    tools:context=".ui.home.fragments.QuestCreateFragment">

    <!-- Header and Menu Icon have been removed -->

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">  <!-- Changed to parent top -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp">

            <!-- Container -->
            <LinearLayout
                android:id="@+id/quest_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/l_palette"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"> <!-- Added margin top for spacing -->

                <!--  Name -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_quest_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/quest_name"
                    android:inputType="textCapWords" />

                <!--  Description -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_quest_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="top"
                    android:hint="@string/quest_description"
                    android:inputType="textMultiLine"
                    android:minLines="3" />

                <!-- ppq -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_ppq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/points_per_quest"
                    android:inputType="number" />


                <!-- Map  -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/map_card"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:id="@+id/map_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/map_placeholder"
                        android:contentDescription="@string/map_preview"/>

                </androidx.cardview.widget.CardView>


                <!-- Locations -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:background="@color/d_palette"
                    android:padding="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/startingPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/l_text"
                        android:textSize="16sp"
                        android:hint="Starting Point"
                        android:inputType="textCapWords" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/endPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/l_text"
                        android:textSize="16sp"
                        android:hint="Ending Point"
                        android:inputType="textCapWords" />
                </LinearLayout>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_save_publish"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:text="@string/save"
                    android:backgroundTint="@color/l_text"
                    android:textColor="@color/d_text"
                    app:cornerRadius="18dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
